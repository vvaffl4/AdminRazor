@page
@model CreateModel
@{
	ViewData["Title"] = "Create user";
}

<h1>
	@ViewData["Title"]
</h1>
@if (!string.IsNullOrEmpty(ViewData["ErrorMessages"] as string))
{
	<p>@ViewData["ErrorMessages"]</p>
}
<form method="post">
	<input asp-for="User.UserName" />
	<input asp-for="User.Password" />
	<input type="submit" value="Confirm" />
</form>